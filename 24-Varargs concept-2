public class Main
{
    
    static int sum(int x,int ...arr){                                     //let assume if u want a value to be there compulsory
        //available as int [] arr;
        
        int result = x;
        for(int a: arr){
            result += a;
        }
        return result;
    }
    
	public static void main(String[] args) {
	          
            //System.out.println("the sum of nothing is: "+ sum());             //hence this nothing will now not give u the value 0,you have to give an integer to satisfy the value for x without that program will give u an error 
	  
    System.out.println("the sum of 1 is: "+ sum(1));
		System.out.println("the sum of 4 and 5 is: "+ sum(4,5));
		System.out.println("the sum of 3, 4 and 5 is: "+ sum(3,4,5));
		System.out.println("the sum of 2, 3, 4 and 5 is: "+ sum(3,4,5));  
		
	}
}
