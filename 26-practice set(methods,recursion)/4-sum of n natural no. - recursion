import java.util.Scanner;

public class Main
{
    // sum(n) = 1+2+3..+n;
    // sum(n) = 1+2+3..+n-1+n;
    // sum(n) = sum(n-1) + n;
    // sum(3) = sum(2) + 3;
    
    static int sumRes(int n){
        if(n == 1){
            return 1;
        } else {
            return n + sumRes(n-1);
        }
    }
    
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		
		System.out.print("Enter the number: ");
		int num = sc.nextInt();
		
		System.out.println(sumRes(num));
		
	}
}
