// constructor in inheritance --> 1

class Base1{
    
    Base1(){
        System.out.println("I am a constructor");
    }
    
    public int x;
    
    public int getX(){
        return x;
    }
    
    public void setX(int x){
        this.x = x;
    }
}

class derived extends Base1{
    public int y;
    
    public int getY(){
        return y;
    }
    
    public void setY(int y){
        this.y = y;
    }
}

public class Main
{
	public static void main(String[] args) {
		derived d = new derived();             // if you do not make constructor in class derived still the comstructor of base class will automatically invoked
		
	}
}
