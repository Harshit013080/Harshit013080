// constructor in inheritance --> 3

class Base1{
    
    Base1(){
        System.out.println("I am a constructor");
    }
    
    Base1(int x){
        System.out.println("I am an overloaded constructor with value of x as:" + x);
    }
    
    }

class derived extends Base1{
                                                                                                            
    derived(){                                                    
        // super(0);
        System.out.println("I am a derived class constructor");
    }
    
    derived(int x,int y){
        super(x);
        System.out.println("I am an overloaded consturctor of derived with value of y as:" + y);
    }
    
}

class childOfDerived{
    
    childOfDerived(){
        System.out.println("I am a child of derived constructor");
    }
    
    childOfDerived(int x,int y,int z){
        super(x,y);
        System.out.println("I am an overloaded consturctor of derived with value of z as:" + z);
    }
}

public class Main
{
	public static void main(String[] args) {
		//derived d = new derived();              //this will call the constructor with no arguments         
		//derived d1 = new derived(14,19);        // this will call the constructor who is taking two int as parameters                                
		childOfDerived cd = new childOfDerived();
		childOfDerived cd1 = new childOfDerived(12,13,14);
	}
}
