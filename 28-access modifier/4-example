        radius = s;
    }
    
    public void setArea(double a){
        area= a;
    }
    
    public void setPerimeter(double p){
        perimeter = p;
    }
    
    
    
    public void getRadius(){
        return radius;
    }
    
    public void getArea(){
        if(area == (2*pi*radius)) {
            return area;
        }else{
            System.out.println("sorry...Wrong area");
        }
    }
    
    public void getPerimeter(){
        if(perimeter = (2*pi*radius)){
            return perimeter;
        }else{
            System.out.println("sorry...wrong perimeter");
        }
    }
}


public class Main
{
	public static void main(String[] args) {
		circle c_1 = new circle;
		
